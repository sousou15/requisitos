<odoo>

<record id="ir_module_category_requirements" model="ir.module.category">
    <field name="name">requirements</field>
</record>

<record id="res_groups_requirements_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="ir_module_category_requirements"/>
    <field name="comment">
        The user will be able to browse some model.
    </field>
</record>

<record id="res_groups_requirements_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id" ref="ir_module_category_requirements"/>
    <field name="implied_ids" eval="[(4, ref('res_groups_requirements_user'))]"/>
    <field name="comment">
        The user will be able to manage some model.
    </field>
    <field name="users" eval="[(4, ref('base.user_admin'))]"/>
</record>

</odoo>
